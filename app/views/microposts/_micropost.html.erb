<div class="container">
  <li id="micropost-<%= micropost.id %>">
    <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
    <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
    <span class="content">
     <%= micropost.content %>
     <%= image_tag micropost.picture.url if micropost.picture? %>
    </span>
    <span class="timestamp">
      Posted <%= time_ago_in_words(micropost.created_at) %> ago.
      <% if current_user?(micropost.user) %>
        <%= link_to "delete post", micropost, method: :delete, data: { confirm: "You sure?"} %>
      <% end %>
      <% if logged_in? %>
        <div class="glyphicon glyphicon-pencil" data-toggle="collapse" data-target="#m-<%= micropost.id %>" aria-expanded="false" aria-controls="m-<%= micropost.id %>">
          <div class="collapse" id="m-<%= micropost.id %>">
            <div>
              <%= form_for ([micropost, @comment]) do |f| %>
                <%= render 'shared/error_messages', object: f.object %>
                <div class="field">
                  <%= f.text_area :comment, placeholder: "Comment on post..." %>
                </div>
                  <%= f.submit "Comment", class: "btn btn-primary" %>
              <%end%>
            </div>
          </div>
        </div> 
      <% end %>
    </span>
  </li>
</div>

